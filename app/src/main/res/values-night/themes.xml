<resources>
    <!-- Base application theme. -->
    <style name="Theme.MorseBuddy" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cyan_200</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryContainer">@color/cyan_300</item>
        <item name="colorOnPrimaryContainer">@color/black</item>
        <item name="colorPrimaryInverse">@color/cyan_900</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/teal_300</item>
        <item name="colorOnSecondaryContainer">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Logo color. -->
        <item name="colorLogoBackground">@color/black</item>
        <item name="colorLogoForeground">@color/cyan_200</item>

        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurfaceVariant">@color/cyan_900</item>
        <item name="colorOnSurfaceVariant">@color/cyan_50</item>

    </style>
</resources>